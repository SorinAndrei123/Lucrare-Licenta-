<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".profesor.CreareTaskProfesorActivity">

        <EditText
            android:id="@+id/editTextDescriereTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:ems="10"
            android:hint="Descrierea cerintei"
            android:inputType="textImeMultiLine"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:padding="16dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/policy"
            android:drawablePadding="16dp"/>

        <EditText
            android:id="@+id/editTextDataDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="172dp"
            android:clickable="true"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Data deadline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/calendar"
            android:padding="16dp"
            android:drawablePadding="16dp"/>

        <RadioGroup
            android:id="@+id/optiuneTipFisierDorit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="424dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >


            <RadioButton
                android:id="@+id/pdf"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/pdf"
                android:drawablePadding="10dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/word"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/word"
                android:drawablePadding="10dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/txt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/txtfile"
                android:drawablePadding="10dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/RAR"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/rar"
                android:drawablePadding="10dp">

            </RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/textViewTipFisierSuportat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="364dp"
            android:text="Tip fisier suportat"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"

            app:layout_constraintBottom_toTopOf="@+id/optiuneTipFisierDorit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/saptamana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="540dp"
            android:text="Saptamana"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/spinnerSaptamanaDeLucru"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.416" />

        <Spinner
            android:id="@+id/spinnerSaptamanaDeLucru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="124dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonCreareTaskNou"
            android:layout_width="389dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_bg"
            android:text="FINISH"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextOraDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="244dp"
            android:clickable="true"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Ora deadline"
            android:inputType="textPersonName"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/hours"
            android:drawablePadding="16dp"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/editTextTitluTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="Titlu"
            android:inputType="textPersonName"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:padding="16dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/title"
            android:drawablePadding="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

